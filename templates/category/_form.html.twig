{{ form_start(form, {'attr': {'class': 'app-form'}}) }}
<div class="form-group">
    <label for="{{ form.name.vars.id }}">{{ form.name.vars.label }}</label>
    {{ form_widget(form.name) }}
</div>

<div class="form-group">
    <label for="{{ form.media.vars.id }}">{{ form.media.vars.label }}</label>
    {{ form_widget(form.media) }}
</div>

<div class="form-group checkbox">
    <label for="{{ form.isOnline.vars.id }}">
        <span>{{ form.isOnline.vars.label }}</span>
        {% if mode == 'edit' %}
            {{ form_widget(form.isOnline) }}
        {% else %}
            {{ form_widget(form.isOnline, {'attr': {'checked': 'checked'}}) }}
        {% endif %}
    </label>
</div>

<button class="app-button" type="submit">
    {% if mode == 'add' %}
        Ajouter
    {% else %}
        Modifier
    {% endif %}
</button>
{{ form_end(form) }}
